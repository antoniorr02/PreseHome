---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <section class="flex flex-col items-center min-h-screen p-4">
    <div class="w-full max-w-md bg-white shadow-xl rounded-2xl p-8">
      <h2 class="text-3xl font-semibold text-center mb-6 text-gray-700">Acceso a tu cuenta</h2>
      
      <form action="/auth/login" method="POST" class="flex flex-col gap-4">
        <input type="email" name="email" placeholder="Correo electrónico" required class="border border-gray-300 rounded-full p-3 focus:outline-none focus:ring-2 focus:ring-blue-400" />
        <input type="password" name="password" placeholder="Contraseña" required class="border border-gray-300 rounded-full p-3 focus:outline-none focus:ring-2 focus:ring-blue-400" />
        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-medium p-3 rounded-full transition duration-300">Iniciar sesión</button>
      </form>

      <div class="my-6 flex items-center">
        <hr class="flex-grow border-t border-gray-300" />
        <span class="px-4 text-gray-500 text-sm">O</span>
        <hr class="flex-grow border-t border-gray-300" />
      </div>

      <div class="flex flex-col gap-4">
        <a href="/auth/google" class="bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium p-3 rounded-full flex items-center justify-center gap-2 border border-gray-300 transition duration-300">
          <img src="/assets/google-logo.png" alt="Google" class="w-5 h-5" />
          <span>Continuar con Google</span>
        </a>
      </div>
      
      <p class="text-center mt-6 text-gray-600 text-sm">
        ¿No tienes cuenta? <a href="/registro" class="text-blue-600 hover:underline">Regístrate aquí</a>
      </p>
    </div>
  </section>
</Layout>