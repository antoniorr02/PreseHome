---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <section class="flex flex-col items-center min-h-screen p-4">
    <div class="w-full max-w-md bg-white shadow-xl rounded-2xl p-8">
      <h2 class="text-3xl font-semibold text-center mb-6 text-gray-700">Recuperar contraseña</h2>

      <p id="info-message" class="text-green-600 text-sm text-center mb-4 hidden"></p>
      <p id="error-message" class="text-red-500 text-sm text-center mb-4 hidden"></p>

      <form id="recovery-form" class="flex flex-col gap-4">
        <input 
          type="email" 
          name="email" 
          placeholder="Introduce tu correo electrónico" 
          required 
          class="border border-gray-300 rounded-full p-3 focus:outline-none focus:ring-2 focus:ring-blue-400" 
        />

        <button 
          type="submit" 
          class="bg-red-600 hover:bg-red-700 text-white font-medium p-3 rounded-full transition duration-300">
          Enviar enlace de recuperación
        </button>
      </form>

      <p class="text-center mt-6 text-gray-600 text-sm">
        ¿Ya tienes cuenta? <a href="/identificate" class="text-blue-600 hover:underline">Inicia sesión</a>
      </p>
    </div>
  </section>
  <script src="src/scripts/recuperacion.js" defer></script>
</Layout>
