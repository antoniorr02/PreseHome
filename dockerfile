FROM node:23

WORKDIR /app

# Instalar dependencias del sistema para puppeteer
RUN apt-get update && apt-get install -y \
    ca-certificates \
    fonts-liberation \
    libappindicator3-1 \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libc6 \
    libcairo2 \
    libcups2 \
    libdbus-1-3 \
    libexpat1 \
    libfontconfig1 \
    libgbm1 \
    libgcc1 \
    libglib2.0-0 \
    libgtk-3-0 \
    libnspr4 \
    libnss3 \
    libpango-1.0-0 \
    libpangocairo-1.0-0 \
    libstdc++6 \
    libx11-6 \
    libx11-xcb1 \
    libxcb1 \
    libxcomposite1 \
    libxcursor1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxi6 \
    libxrandr2 \
    libxrender1 \
    libxss1 \
    libxtst6 \
    lsb-release \
    wget \
    xdg-utils \
    && rm -rf /var/lib/apt/lists/*
    
# Primero copiar package.json para aprovechar el cache de Docker
COPY backend/package*.json ./

# Instalar dependencias
RUN npm install

# Luego copiar el resto del c√≥digo
COPY backend /app/
COPY /dist /app/public/

# Generar prisma client
RUN npx prisma generate

EXPOSE 80

# Comando de inicio
CMD ["sh", "-c", "npx prisma migrate deploy && node src/server.js"]

